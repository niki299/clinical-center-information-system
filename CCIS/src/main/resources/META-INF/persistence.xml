<?xml version="1.0" encoding="UTF-8"?>
<persistence xmlns="http://java.sun.com/xml/ns/persistence" version="2.0">
    <persistence-unit name="CCISPersistence" transaction-type="RESOURCE_LOCAL">
        <provider>org.hibernate.jpa.HibernatePersistenceProvider</provider>

        <class>com.example.demo.model.Appointment</class>
        <class>com.example.demo.model.BusinessHours</class>
        <class>com.example.demo.model.Calendar</class>
        <class>com.example.demo.model.Clinic</class>
        <class>com.example.demo.model.ClinicAdmin</class>
        <class>com.example.demo.model.ClinicCenterAdmin</class>
        <class>com.example.demo.model.CodeBook</class>
        <class>com.example.demo.model.Doctor</class>
        <class>com.example.demo.model.ExaminationType</class>
        <class>com.example.demo.model.MedicalRecord</class>
        <class>com.example.demo.model.MedicalStaff</class>
        <class>com.example.demo.model.Nurse</class>
        <class>com.example.demo.model.Room</class>
        <class>com.example.demo.model.Patient</class>
        <class>com.example.demo.model.Request</class>
        <class>com.example.demo.model.User</class>

        <properties>
            <property name="hibernate.connection.driver_class" value="org.postgresql.Driver"/>
            <property name="hibernate.connection.url" value="jdbc:postgresql://localhost:5432/postgres"/>
            <property name="hibernate.connection.username" value="postgres"/>
            <property name="hibernate.connection.password" value="123"/>
            <property name="javax.persistence.schema-generation.database.action" value="create"/>

            <property name="hibernate.id.new_generator_mappings" value="true"/>
        </properties>
    </persistence-unit>
</persistence>
